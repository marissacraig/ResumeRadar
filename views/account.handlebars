<div class="row m-4">
  <div class="col-auto">
    <h2>Welcome, {{user.name}}!</h2>
  </div>
</div>

<div class="row m-4 text-center justify-content-center">
  <div class="col-md-8">
    <h3>Account Information</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <div class="input-group">
          <input type="text" class="form-control" placeholder="{{user.name}}" aria-label="name" aria-describedby="button-addon2">
          <button class="btn btn-primary" type="button" id="edit-name">Edit</button>
        </div>
      </div>
      <div class="form-group">
        <div class="input-group">
          <input type="text" class="form-control" placeholder="{{user.username}}" aria-label="username" aria-describedby="button-addon2">
          <button class="btn btn-primary" type="button" id="edit-username">Edit</button>
        </div>
      </div>
      <div class="form-group">
        <div class="input-group">
          <input type="text" class="form-control" placeholder="{{user.email}}" aria-label="email" aria-describedby="button-addon2">
          <button class="btn btn-primary" type="button" id="edit-email">Edit</button>
        </div>
      </div>
      <div class="form-group">
        <div class="input-group">
          <h6>Password</h6>
          <button class="btn btn-primary" type="button" id="edit-password">Edit</button>
        </div>
        <input type="text" class="form-control" placeholder="Password"
                    id="editPassword" style="display: none;">
      </div>
    </form>
  </div>

  <div class="col-md-6 delete-account">
   
    <div class="row m-4">
      <div class="col-md-8">
        <h4>Delete Account</h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{user.id}}">
          DELETE
        </button>
      </div>
    </div>
  </div>
</div>

<script src="/js/account.js"></script>