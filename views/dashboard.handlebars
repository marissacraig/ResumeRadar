<section class="main-section m-2">
        <h3>Dashboard</h3>
        <div class="add-application d-grid gap-2 d-md-flex justify-content-md-end">
          <a href="/application/new">
            <button class="btn primary-btn me-md-2">
                + Add new application
            </button>
        </a>
        </div>
        <div>
          {{#if applications.length}} 
          {{#each applications as |application|}}
          <table class="table">
            <thead>
                <tr>
                  <th scope="col">Job Title</th>
                  <th scope="col">Company</th>
                  <th scope="col">Status</th>
                  <th scope="col">Location</th>
                  <th scope="col">Company Website?</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                    <td><a href="/application/{{id}}">
                        <span class="post-title m-2">
                            {{job.title}}
                        </span>
                    </a></td>
                    <td>
                        <span>
                            {{job.company}}
                        </span>
                    </td>
                    <td>
                        <span class="post-creator">
                            {{job.status}}
                        </span>
                    </td>
                    <td>
                        <span>
                            {{job.location}}
                        </span>
                    </td>
                    <td>
                        <span>
                            {{job.url}}
                        </span>
                    </td>
                  </tr>
            </tbody>
            </table>
          {{/each}}
          {{else}}
            <div><p>You're not tracking any applications yet!</p></div>
          {{/if}}
        </div>
  
      </section>