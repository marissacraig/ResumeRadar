<section class="text-center p-2">
    <form class="new-application-form">
        <h4>New Application</h4>
        <div class="container d-grid gap-2 col-6" role="group" aria-label="">
            <div class="form-group">
                <label for="jobTitle" class="form-label mt-4">Choose a Job Title</label>
                <select class="form-select" id="jobTitle" name="jobTitle" onchange='otherJobTitle()' required>
                    <option value="">Please Choose One</option>
                    <option value="Front-end Software Developer">Front-end Software Developer</option>
                    <option value="Back-end Software Developer">Back-end Software Developer</option>
                    <option value="Full-stack Software Developer">Full-stack Software Developer</option>
                    <option value="Software Engineer">Software Engineer</option>
                    <option value="Network Administrator">Network Administrator</option>
                    <option value="Web Developer">Web Developer</option>
                    <option value="Systems Analyst">Systems Analyst</option>
                    <option value="Quality Assurance Engineer">Quality Assurance Engineer</option>
                    <option value="Database Administrator">Database Administrator</option>
                    <option value="PHP Developer">PHP Developer</option>
                    <option value="Software Test Engineer">Software Test Engineer</option>
                    <option value="Security Engineer">Security Engineer</option>
                    <option value="Java Developer">Java Developer</option>
                    <option value="Hardware Engineer">Hardware Engineer</option>
                    <option value="Python Developer">Python Developer</option>
                    <option value="Lead Developer">Lead Developer</option>
                    <option value="Mobile Developer">Mobile Developer</option>
                    <option value="Development Operations Engineer">Development Operations Engineer</option>
                    <option value="Chief Technology Officer">Chief Technology Officer</option>
                    <option value="Software Architect">Software Architect</option>
                    <option value="Other">Other</option>
                </select>
                <input type="text" class="form-control" placeholder="Please specify Job Title" id="otherJobTitle" style="display: none;">

            </div>
            <div class="form-group">
                <label for="company" class="form-label mt-4">Hiring Company</label>
                <select class="form-select" id="company" onchange='otherCompany()' required>
                    <option value="">Please Choose One...</option>
                    <option value="Google">Google</option>
                    <option value="Apple">Apple</option>
                    <option value="Facebook">Facebook</option>
                    <option value="Qualcomm">Qualcomm</option>
                    <option value="BAE Systems">BAE Systems</option>
                    <option value="Intuit">Intuit</option>
                    <option value="GoFundMe">GoFundMe</option>
                    <option value="AlwaysAI">AlwaysAI</option>
                    <option value="Other">Other</option>
                </select>
                <input type="text" class="form-control" placeholder="Please specify Job Company" id="otherCompany" style="display: none;">

            </div>
            <div class="form-block">
                <label for="status" class="form-label mt-4">Application Status</label>
                <select class="form-select" id="status" onchange='otherStatus()' required>
                    <option value="">Please Choose One...</option>
                    <option value="Not Applied">Not Applied</option>
                    <option value="Applied and awaiting response">Applied and awaiting response</option>
                    <option value="Scheduled first interview">Scheduled first interview</option>
                    <option value="Scheduled second interview">Scheduled second interview</option>
                    <option value="I am no longer interested">I am no longer interested</option>
                    <option value="Company did not hire me">Company did not hire me</option>
                    <option value="Other">Other</option>
                </select>
                <input type="text" class="form-control" placeholder="Please specify application status"
                    id="otherStatus" style="display: none;">
            </div>
            <div class="form-block">
                <label for="location" class="form-label mt-4">Job Location</label>
                <textarea class="form-control" id="location" rows="1" placeholder="Enter job location here"
                    required></textarea>
            </div>
            <div class="form-block">
                <label for="companyURL" class="form-label mt-4">Application Link</label>
                <textarea class="form-control" id="companyURL" rows="1"
                    placeholder="Copy and Paste URL here"></textarea>
            </div>
            <div class="form-block">
                <label for="description" class="form-label mt-4">Job Description</label>
                <textarea class="form-control" id="description" rows="4"
                    placeholder="Copy and Paste job description here" required></textarea>
            </div>
            <div class="form-block">
                <label for="salary" class="form-label mt-4">Salary</label>
                <textarea class="form-control" id="salary" rows="1" placeholder="Enter salary here" required></textarea>
            </div>
        </div>
        <button type="submit" class="btn btn-primary m-4">
            Submit
        </button>
    </form>
</section>

<script src="../../js/applicationCheckOther.js"></script>
<script src="../../js/newApplication.js"></script>

